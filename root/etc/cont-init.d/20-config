#!/usr/bin/with-contenv bash

# create our folders
mkdir -p \
	/config/{data,log}

# create symlinks for config
[[ -L /var/lib/murmur && ! /var/lib/murmur -ef /config/data ]] && unlink /var/lib/murmur
[[ -L /var/log/murmur.log && ! /var/log/murmur.log -ef /var/log/murmur.log ]] && unlink /var/log/murmur.log
[[ ! -L /var/lib/murmur ]] && ln -s /config/data /var/lib/murmur
[[ ! -L /var/log/murmur.log ]] && ln -s /config/log/murmur.log /var/log/murmur.log

# permissions
chown -R mcf:mcf \
	/config \
	/var/lib/murmur
